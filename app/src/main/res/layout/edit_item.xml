<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newpink"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="7dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/orange"
                android:elevation="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Edit Your Report Informations"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewMoodEdit"
                android:layout_width="155dp"
                android:layout_height="115dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <com.harrywhewell.scrolldatepicker.DayScrollDatePicker
                android:id="@+id/dayDatePickerEdit"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                app:layout_constraintTop_toBottomOf="@+id/textView8"


                app:selectedColor="@color/darkpink" />

            <TextView
                android:id="@+id/textViewHowareyouEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Your Are Feeling:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/radioGroupEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewHappyEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Happy"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textViewCalmEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Calm"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textViewManicEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Manic"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textViewAngryEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Angry"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textViewSadEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sad"
                    android:textColor="@color/black" />
            </RadioGroup>


            <TextView
                android:id="@+id/textViewDepressedMood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avenir"
                android:text="Today's depressed mood:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderDepressedEdit"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:stepSize="20.0"
                    android:value="20.0"
                    android:valueFrom="0.0"
                    android:valueTo="100.0"
                    app:thumbColor="@color/darkpink"
                    app:trackColor="@color/pink"


                    />

                <TextView
                    android:id="@+id/textViewPourDep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13dp"
                    android:text="0" />
            </RadioGroup>

            <TextView
                android:id="@+id/textViewElevatedMood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/avenir"
                android:text="Today's elevated mood:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderElevatedEdit"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:stepSize="20.0"
                    android:value="20.0"
                    android:valueFrom="0.0"
                    android:valueTo="100.0"
                    app:thumbColor="@color/darkpink"
                    app:trackColor="@color/pink" />

                <TextView
                    android:id="@+id/textViewPourEl"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13dp"
                    android:text="0" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewIrritabilityMood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/avenir"
                android:text="Today's Irritabililty mood:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderIrritabilityEdit"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:stepSize="20.0"
                    android:value="20.0"
                    android:valueFrom="0.0"
                    android:valueTo="100.0"
                    app:thumbColor="@color/darkpink"
                    app:trackColor="@color/pink" />

                <TextView
                    android:id="@+id/textViewPourIrr"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="13dp"
                    android:text="0" />
            </LinearLayout>


            <TextView
                android:id="@+id/textViewPsychotic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c4"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/avenir"
                android:text="Psychotic symptoms today:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"

                />

            <RadioGroup
                android:id="@+id/btnsPsychoticSymptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewPsychotic"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <Button

                    android:id="@+id/btnPsychoticSymptomsNoEdit"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/darkpink"
                    android:fontFamily="@font/avenir"
                    android:text="No"

                    />

                <Button
                    android:id="@+id/PsychoticSymptomsYesEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/darkpink"
                    android:fontFamily="@font/avenir"
                    android:text="Yes" />


            </RadioGroup>


        </LinearLayout>
    </LinearLayout>
</ScrollView>