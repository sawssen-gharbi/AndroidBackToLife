<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        app:strokeWidth="1dp"
        app:strokeColor="@color/orange"
        app:cardElevation="0dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_alignParentLeft="true"
                android:id="@+id/rell1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    app:roundPercent = "1.0"
                    android:id="@+id/img_user_inv"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_person"/>


                <LinearLayout
                    android:id="@+id/ll_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img_user_inv">

                    <TextView
                        android:id="@+id/name_user_inv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="patient"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/date_inv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 hrs"
                        android:textSize="13sp"
                        android:textColor="@color/orange"
                        android:fontFamily="sans-serif"/>







                </LinearLayout>
            </RelativeLayout>



            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_lock_24"
                >
                <Button
                    android:id="@+id/accept_inv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:icon="@drawable/ic_baseline_check_circle_24"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    />

                <Button
                    android:id="@+id/refuse_inv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:icon="@drawable/ic_baseline_edit_24"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    />
            </com.google.android.material.button.MaterialButtonToggleGroup>

        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>