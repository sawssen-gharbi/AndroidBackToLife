<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sp_bg">

            <TextView
                android:id="@+id/textViewHi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Hi"
                android:fontFamily="@font/avenir"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.086"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/avenir"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toEndOf="@+id/textViewHi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.75" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="153dp"
                android:text="Welcome Back!"
                android:fontFamily="@font/avenir"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.087"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewHi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/light_purple_background"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/textView8">


                <com.harrywhewell.scrolldatepicker.DayScrollDatePicker
                    android:id="@+id/dayDatePicker"
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    app:selectedColor="@color/darkpink"



                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="720dp">

                    <TextView
                        android:id="@+id/textViewMyMoodToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/avenir"
                        android:text="My Mood Today"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c1"
                        android:layout_width="373dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="@color/newpink"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <TextView
                            android:id="@+id/textViewHowareyou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/avenir"
                            android:text="How are you feeling today?"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RadioGroup
                            android:id="@+id/radioGroupEmotions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewHowareyou">

                            <ImageView
                                android:id="@+id/imageViewHappy"
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/happyy" />


                            <ImageView
                                android:id="@+id/imageViewCalm"
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/yin_yang_symbol" />


                            <ImageView
                                android:id="@+id/imageViewManic"
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/celtic" />

                            <ImageView
                                android:id="@+id/imageViewAngry"
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/angryy" />

                            <ImageView
                                android:id="@+id/imageViewSad"
                                android:layout_width="200dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/sadd" />


                        </RadioGroup>

                        <RadioGroup
                            android:id="@+id/linearlayoutEmotions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="105dp"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@+id/radioGroupEmotions">


                            <TextView
                                android:id="@+id/textViewHappy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Happy" />

                            <TextView
                                android:id="@+id/textViewCalm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Calm" />

                            <TextView
                                android:id="@+id/textViewManic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Manic" />

                            <TextView
                                android:id="@+id/textViewAngry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Angry" />

                            <TextView
                                android:id="@+id/textViewSad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Sad" />

                        </RadioGroup>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textViewMoods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/c1"
                        android:layout_marginLeft="10dp"
                        android:text="Moods"
                        android:fontFamily="@font/avenir"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c2"
                        android:layout_width="390dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/textViewMoods"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="@color/newpink"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/c1">


                        <TextView
                            android:id="@+id/textViewDepressedMood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/avenir"
                            android:text="Today's depressed mood:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp"
                            android:orientation="horizontal">

                            <com.google.android.material.slider.Slider
                                android:id="@+id/sliderDepressed"
                                android:layout_width="315dp"
                                android:layout_height="wrap_content"
                                android:stepSize="20.0"
                                android:value="20.0"
                                android:valueFrom="0.0"
                                android:valueTo="100.0"
                                app:thumbColor ="@color/darkpink"
                                app:trackColor="@color/pink"


                                />

                            <TextView
                                android:id="@+id/textViewPourDep"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="13dp"
                                android:text="0" />
                        </RadioGroup>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c3"
                        android:layout_width="390dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/c2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="@color/newpink"                        app:cardCornerRadius="20dp">


                        <TextView
                            android:id="@+id/textViewElevatedMood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/avenir"
                            android:text="Today's elevated mood:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp">

                            <com.google.android.material.slider.Slider
                                android:id="@+id/sliderElevated"
                                android:layout_width="315dp"
                                android:layout_height="wrap_content"
                                android:stepSize="20.0"
                                android:value="20.0"
                                android:valueFrom="0.0"
                                android:valueTo="100.0"
                                app:thumbColor ="@color/darkpink"
                                app:trackColor="@color/pink"
                                />

                            <TextView
                                android:id="@+id/textViewPourEl"
                                android:layout_width="33dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="13dp"
                                android:text="0" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c4"
                        android:layout_width="390dp"
                        android:layout_height="90dp"
                        android:layout_below="@+id/c3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="@color/newpink"
                        app:cardCornerRadius="20dp">


                        <TextView
                            android:id="@+id/textViewIrritabilityMood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/avenir"
                            android:text="Today's Irritabililty mood:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp">

                            <com.google.android.material.slider.Slider
                                android:id="@+id/sliderIrritability"
                                android:layout_width="315dp"
                                android:layout_height="wrap_content"
                                android:stepSize="20.0"
                                android:value="20.0"
                                android:valueFrom="0.0"
                                android:valueTo="100.0"
                                app:thumbColor ="@color/darkpink"
                                app:trackColor="@color/pink"
                                />

                            <TextView
                                android:id="@+id/textViewPourIrr"
                                android:layout_width="33dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="13dp"
                                android:text="0" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textViewPsychotic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/c4"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/avenir"
                        android:text="Psychotic symptoms today:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"

                        />

                    <RadioGroup
                        android:id="@+id/btnsPsychoticSymptoms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewPsychotic"
                        android:layout_marginLeft="105dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <Button

                            android:id="@+id/btnPsychoticSymptomsNo"
                            android:layout_width="78dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:backgroundTint="@color/darkpink"
                            android:text="No"
                            android:fontFamily="@font/avenir"

                            />

                        <Button
                            android:id="@+id/PsychoticSymptomsYes"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/darkpink"
                            android:text="Yes"
                            android:fontFamily="@font/avenir"
                            />


                    </RadioGroup>

                    <Button
                        android:id="@+id/buttonAdd"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewPsychotic"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:text="+"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        app:tint="@color/white" />




                </RelativeLayout>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</ScrollView>